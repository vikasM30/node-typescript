{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "ES6",
      "DOM"
    ],
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "commonjs",
    "types": [
      "reflect-metadata",
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "rootDirs": ["./"],
    "outDir": "./dist"
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./"
  ],
}
